# NuxBox Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://nuxbox_user:password@localhost:5432/nuxbox_db

# PostgreSQL Connection Details (alternative format)
PGHOST=localhost
PGPORT=5432
PGUSER=nuxbox_user
PGPASSWORD=password
PGDATABASE=nuxbox_db

# Session Secret
# Generate a random string for session encryption
SESSION_SECRET=your-random-secret-key-min-32-characters

# Application Settings
NODE_ENV=production
PORT=3000

# Replit Auth Configuration (optional)
# Only needed if using Replit Authentication
REPL_ID=your-replit-id
REPLIT_AUTH_SECRET=your-auth-secret

# File Upload Configuration (optional)
UPLOAD_DIR=./downloads
MAX_FILE_SIZE=524288000  # 500MB in bytes

# Email Configuration (optional, for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# API Configuration
API_URL=http://localhost:3000
API_TIMEOUT=30000

# Logging
LOG_LEVEL=info
